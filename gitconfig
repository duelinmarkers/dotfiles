[alias]
        st = status
        di = diff
        ds = diff --staged
        co = checkout
        ci = commit -v
        ll = log --graph --pretty=format:\"%C(yellow)%h %C(cyan)%ad%C(yellow)%d %C(magenta)%an%Creset | %s%+b\"
        spp = !git stash && git pull && git stash pop
        amend = commit --amend -C HEAD
        pplease = push --force-with-lease
        recents = !git branch --sort=committerdate | tail
        fmain = fetch origin main:main
[user]
        name = John Hume
        email = duelin.markers@gmail.com
[color]
        ui = true
[push]
        default = simple
        autoSetupRemote = true
[rebase]
        autosquash = true
[pull]
        rebase = true
[diff]
        renames = true
